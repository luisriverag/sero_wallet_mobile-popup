{
    "short_name": "Ionic App",
    "name": "My Ionic App",

    "permissions": [
        "notifications",
        "storage"
    ],

    "version": "0.0.1",
    "homepage_url": "https://sero.cash",
    "description": "SERO Chrome Extension",
    "icons": {
        "16": "icon.png",
        "32": "icon.png"
    },
    "manifest_version": 2,
    "background": {
        "scripts": ["assets/js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png"
        },
        "default_title": "SERO Ext",
        "default_popup": "index.html"

    }
}
